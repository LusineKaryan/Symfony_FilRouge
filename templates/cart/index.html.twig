{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<style>
.thumbnail { width: 70px;}
.p-3 {margin: 30px;}
</style>

 
    <div class="p-3">
        <h1>Votre panier</h1>
    </div>
<div class="bg-light p-3">   
{% if items | length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>Produit</th>
            <th>Titre</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
            <tr>
                <td><img src="{{ asset('images/') }}{{ item.produit.image }}" class="thumbnail"> </td>
                <td>{{ item.produit.titre }}</td>
                <td>{{ item.produit.prix }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.produit.prix * item.quantity}}</td>
                <td>
                    <a href="{{ path('cart_remove', {'id': item.produit.id})}}" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    
    <tfoot>
    <tr>
        <td colspan="4" class="text-right">Total :</td>
        <td>{{ total }}</td>
        <td></td>
    </tr>
    </tfoot>
</table>

{% else %}
    <p>Votre panier est vide !</p>
    <a href="{{ path('versere') }}" style="color:#772953;">Ajouter un produit</a>
{% endif %}
</div>    
{% endblock %}